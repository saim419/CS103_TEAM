<!DOCTYPE html>
<html>

<head>
    <title>Clothing Generator</title>
    <link rel="stylesheet" href="/styles.css">
    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
</head>

<body>
    <h1>Clothing Generator</h1>
    <p>Enter your favorite clothing items:</p>
    <form>
        <input type="text" name="brand" id="brand" required>
        <button type="button" onclick="generateClothingList()">Generate Response</button>
    </form>
    <div id="clothingList"></div>
    <script>
        const generateClothingList = async () => {
            const input = document.getElementById("brand").value;
            const response = await axios.post("/generateClothingList", { input });
            document.getElementById("clothingList").innerText = response.data;
        };
    </script>
</body>

</html>
